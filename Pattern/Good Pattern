#include<iostream>
using namespace std;
// Alphanumeric Pattern
int main(){
    int n;
    cout << "Enter n = ";
    cin >> n ; 
    for(int i=1;i<=n;i++){               
        for(int j=1;j<=i;j++){
            if(i%2!=0){
                cout << j << " ";
            }
            else{
                cout << char(j+64) << " ";
            }
        }
        cout << endl;
    }
    return 0;
}

// Number pattern 3
int main(){
    int n;
    cout << "Enter n = ";                 /* (PATTERN) */
    cin >> n;                             // 4
    for(int i=1;i<=n;i++){                // 4 3
        for(int j=n;j>=n-i+1;j--){        // 4 3 2
            cout << j << " ";             // 4 3 2 1
        }
        cout << endl;
    }
}

// Floris Triangle
int main(){
    int n;
    cout << "Enter n = ";
    cin >> n ; 
    int a = 1;                                        // 1
    for(int i=1;i<=n;i++){                            // 2 3             
        for(int j=1;j<=i;j++){                        // 4 5 6 
            cout << a << " ";                         // 7 8 9 10
            a++;
        }
        cout << endl;
    }
}

// Number Pattern 4
int main(){
    int n;
    cout << "Enter n = ";
    cin >> n ;                                        // 1
    for(int i=1;i<=n;i++){                            // 0 1       
        for(int j=1;j<=i;j++){                        // 1 0 1                         
                 if((i+j)%2!=0){
                cout << 0 << " ";
            }   
            else {
                cout << 1 << " ";
            }         
        } 
        cout << endl;                                            
    }
}

// Plus Star pattern
int main(){
    int n,i,j;
    cout << "Enter n = ";
    cin >> n ; 
    for(int i=1;i<=n;i++){               
        for(int j=1;j<=n;j++){
            if(i==n/2+1 || j==n/2+1){
                cout << "*" << " ";
            }
            else{
                cout << " ";
            }
        }
        cout << endl;
    }
}

// Cross Star pattern

int main(){
    int n;
    cout << "Enter n = ";
    cin >> n ; 
    for(int i=1;i<=n;i++){               
        for(int j=1;j<=n;j++){
            if(j==i || j==(n-i+1)){
                cout << "*" << " ";
            }
            else{
                cout << " ";
            }
        }
        cout << endl;
    }
}

// Pascals triangle
int fact(int x){
    int f=1;
    for(int k=1;k<=x;k++){
        f*=k;
    }
    return f;
}
int nCr(int n,int r){
    return fact(n)/(fact(r)*fact(n-r));
}
int main(){
    int n;
    cout << "Enter n : ";
    cin >> n;
    for(int i=0;i<=n;i++){ 
        for(int j=0;j<=i;j++){ 
           cout << nCr(i,j) <<" ";
        }
        cout << endl;
    }
}

