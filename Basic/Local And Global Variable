#include<iostream>
#define sq(r) r*r
using namespace std;
int c=4,d=5;
int sum(int c,int d){
    return c+d;
}
int main(){
      int a=2,b=3; // Local variable defining
      float pi = 3.14;
      cout << sum(c,d); // Output using global variable
      cout<< endl;
      cout << a+b << endl; //Output using local variable
      int r;
      cout << "Enter radius :";
      cin >> r;
      cout << "Area of circle : " << pi*sq(r);
}
